<h1>Inventory Stock Overview</h1>

<%= link_to 'New Item', new_inventory_path, class: "button" %>

<% if @items.any? %>
  <table>
    <thead>
      <tr>
        <th>Item Name</th>
        <th>Available Stock</th>
        <th>Total Incoming</th>
        <th>Total Outgoing</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item['namaBarang'] %></td>
          <td><%= item['stokTersedia'] %></td>
          <td><%= item['totalMasuk'] %></td>
          <td><%= item['totalKeluar'] %></td>
          <td><%= link_to 'Show', inventory_path(item['id']) %></td>
          <td><%= link_to 'Edit', edit_inventory_path(item['id']) %></td>
          <td><%= link_to 'Destroy', inventory_path(item['id']), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No inventory items found.</p>
<% end %>

<style>
  /* Basic styling for the table and button */
  body { font-family: sans-serif; margin: 20px; }
  h1 { color: #333; }
  table { width: 100%; border-collapse: collapse; margin-top: 20px; }
  th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
  th { background-color: #f2f2f2; }
  .button {
    display: inline-block;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    margin-bottom: 20px;
  }
  .button:hover {
    background-color: #0056b3;
  }
</style>

